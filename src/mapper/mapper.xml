<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- SQL 작성 및 관리 -->
<!-- 
<mapper>에는 namespace라는 속성이 반드시 있어야 함!
이름을 주고 싶지 않으면 반드시 공백 한 칸 이라도 있어야 함
-->

<mapper namespace=" ">
	<!-- mapper 안에 sql query문을 작성할 수 있음 -->
	
	<!-- public ArrayList selectAllDept(){ } 처럼 동작하도록-->
	<select id="selectAllDept" resultType="vo.DeptVO"> <!-- DeptVO로 리턴해줄거다 -->	
		select * from dept
	</select>
	
	
	
	
	
</mapper>